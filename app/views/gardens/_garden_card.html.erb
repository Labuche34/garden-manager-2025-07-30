<%= link_to garden_path(garden) do %>
  <div class="card-garden">
    <%= image_tag garden.banner_url %>
    <div class="card-garden-infos">
      <div>
        <h2><%= garden.name %></h2>
      </div>
      <span class="fst-italic fs-6">
        Plants: <%= plants_names.to_sentence.truncate(20) %>
      </span>
    </div>
  </div>
<% end %>
